pragma solidity ^0.8.0;

contract CrossChainMessage {
    address public owner;
    mapping(uint256 => string) public messages;

    constructor() public {
        owner = msg.sender;
    }

    function sendMessage(uint256 messageId, string memory message) public {
        require(msg.sender == owner, "Only the owner can send messages");
        messages[messageId] = message;
    }

    function getMessage(uint256 messageId) public view returns (string memory) {
        return messages[messageId];
    }
}
